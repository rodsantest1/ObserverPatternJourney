<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" FontSize="20">
    <Grid>
        <Grid.DataContext>
            <local:Customer/>
        </Grid.DataContext>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Add Customer" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Click="AddCustomer_Click"
                />
        <TextBlock TextWrapping="Wrap" Text="{Binding CustomerId}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
